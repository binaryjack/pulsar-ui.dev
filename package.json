{
  "name": "@pulsar-framework/ui",
  "version": "0.7.0-alpha",
  "description": "Component library for the Pulsar framework",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "echo 'UI components are available in src/ for import'",
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "showcase:dev": "vite",
    "showcase:build": "vite build",
    "showcase:preview": "vite preview"
  },
  "keywords": [
    "pulsar",
    "ui",
    "components",
    "react",
    "typescript",
    "tailwind"
  ],
  "dependencies": {
    "@pulsar-framework/design-tokens": "workspace:^",
    "@pulsar-framework/pulsar.dev": "workspace:*"
  },
  "devDependencies": {
    "@pulsar-framework/vite-plugin": "workspace:^",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.3",
    "vite": "^6.0.0"
  },
  "author": "Tadeo Piana <https://www.linkedin.com/in/tadeopiana/>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/binaryjack/pulsar-ui.dev.git"
  },
  "homepage": "https://github.com/binaryjack/pulsar-ui.dev#readme",
  "bugs": {
    "url": "https://github.com/binaryjack/pulsar-ui.dev/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
