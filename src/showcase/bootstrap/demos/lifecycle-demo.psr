/**
 * Lifecycle Hooks Demo Component
 * Demonstrates REAL onMount() and onCleanup() lifecycle hooks
 */

import { createSignal, onMount, onCleanup } from '@pulsar-framework/pulsar.dev';

export const LifecycleDemo = () => {
  const [logs, setLogs] = createSignal<string[]>([]);
  const [mountCount, setMountCount] = createSignal(0);
  
  // REAL onMount hook - fires when component mounts
  onMount(() => {
    const log = `${new Date().toLocaleTimeString()} - âœ… onMount() called (#${mountCount() + 1})`;
    setLogs([...logs(), log]);
    setMountCount(mountCount() + 1);
    console.log('[LifecycleDemo]', log);
  });
  
  // REAL onCleanup hook - fires when component unmounts
  onCleanup(() => {
    const log = `${new Date().toLocaleTimeString()} - ğŸ”´ onCleanup() will be called on unmount`;
    console.log('[LifecycleDemo]', log);
  });
  
  const addManualLog = () => {
    const log = `${new Date().toLocaleTimeString()} - ğŸ“ Manual log added`;
    setLogs([...logs(), log]);
  };
  
  return (
    <div style="margin-bottom: 20px; padding: 20px; background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); border-radius: 8px;">
      <div style="text-align: center; margin-bottom: 20px;">
        <div style="padding: 30px; background: rgba(16, 185, 129, 0.3); border-radius: 8px; transition: all 0.3s;">
          <div style="font-size: 48px; margin-bottom: 10px;">âœ…</div>
          <div style="color: white; font-size: 18px; font-weight: bold;">
            {() => 'Component Mounted (onMount fired ' + mountCount() + (mountCount() === 1 ? ' time' : ' times') + ')'}
          </div>
          <div style="color: rgba(255,255,255,0.8); font-size: 14px; margin-top: 10px;">
            REAL onMount() and onCleanup() hooks are active
          </div>
        </div>
      </div>
      
      <div style="display: flex; gap: 10px; justify-content: center; margin-bottom: 20px;">
        <button 
          onClick={() => addManualLog()}
          style="padding: 12px 24px; background: #10b981; color: white; border: none; border-radius: 6px; cursor: pointer; font-weight: bold;">
          Add Log Entry
        </button>
      </div>
      
      <div style="background: rgba(0,0,0,0.3); padding: 15px; border-radius: 6px;">
        <div style="color: #10b981; font-weight: bold; margin-bottom: 10px; font-size: 14px;">ğŸ“‹ Lifecycle Events Log:</div>
        <div style="max-height: 150px; overflow-y: auto;">
          {logs().length === 0 ? (
            <div style="color: rgba(255,255,255,0.6); font-style: italic; font-size: 13px;">
              onMount() fires automatically when this component mounts. Check console for onCleanup().
            </div>
          ) : null}
          {logs().map((log: string) => (
            <div style="color: rgba(255,255,255,0.9); padding: 4px 0; font-family: 'Consolas', monospace; font-size: 12px;">
              {log}
            </div>
          ))}
        </div>
      </div>
      
      <div style="background: rgba(0,0,0,0.2); padding: 15px; border-radius: 6px; color: white; font-size: 13px; margin-top: 15px;">
        <strong>ğŸ’¡ This demonstrates:</strong> REAL onMount() fires when component mounts. onCleanup() fires when you navigate away (check console).
      </div>
    </div>
  );
};
