/**
 * User Controls Component
 * UI for user authentication controls
 */

import { useContext } from '@pulsar-framework/pulsar.dev';
import { DemoButton } from '../../common/components/demo-button.psr';
import { UserContext } from './user-provider.psr';

export const UserControls = () => {
  const ctx = useContext(UserContext);
  
  const users = [
    { name: 'Alice', role: 'admin' },
    { name: 'Bob', role: 'user' },
    { name: 'Charlie', role: 'moderator' }
  ];
  
  return (
    <div>
      {ctx.isLoggedIn() ? (
        <DemoButton onClick={ctx.logout} color="#ef4444">
          Logout
        </DemoButton>
      ) : (
        <div style="display: flex; gap: 10px; flex-wrap: wrap;">
          {users.map(userItem => (
            <DemoButton 
              onClick={() => ctx.login(userItem.name, userItem.role)}
              color="#10b981">
              Login as {userItem.name}
            </DemoButton>
          ))}
        </div>
      )}
    </div>
  );
};
