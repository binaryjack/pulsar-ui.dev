/**
 * Pulsar UI Showcase - Main Application Entry Point (PSR)
 * Simple Reactivity Debug Test
 */

import { createSignal, createEffect } from '@pulsar-framework/pulsar.dev';

component DebugReactivity() {
  console.log('[Debug] Component initializing...');
  
  const [count, setCount] = createSignal(0);
  
  createEffect(() => {
    console.log('[Effect] Count changed to:', count());
  });
  
  return (
    <div style="padding: 40px; background: #1a1a1a; min-height: 100vh; color: white; font-family: system-ui;">
      <h1 style="...">ðŸ”¥ TEST HMR!</h1>
      <div style="display: flex; gap: 20px; align-items: center;">
        <button 
          onClick={() => { 
            console.log('[Click] Increment, before:', count()); 
            setCount(count() + 1); 
            console.log('[Click] After:', count());
          }}
          style="padding: 16px 32px; font-size: 20px; background: #3b82f6; border: none; color: white; border-radius: 8px; cursor: pointer; font-weight: bold;">
          Increment
        </button>
        <button 
          onClick={() => { 
            console.log('[Click] Decrement, before:', count()); 
            setCount(count() - 1); 
          }}
          style="padding: 16px 32px; font-size: 20px; background: #ef4444; border: none; color: white; border-radius: 8px; cursor: pointer; font-weight: bold;">
          Decrement
        </button>
        <div style="font-size: 48px; font-weight: bold; color: #10b981; margin-left: 20px;">
          Count: $(count)
        </div>
      </div>
      <div style="margin-top: 40px; padding: 20px; background: #2a2a2a; border-radius: 8px;">
        <p style="font-size: 18px; color: #9ca3af;">Open Console to see effect logs!</p>
      </div>
    </div>
  );
}

