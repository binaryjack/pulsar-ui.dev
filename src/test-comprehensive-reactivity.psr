        </div>
        
        <div class="animation-stats" style="margin-top: 15px; font-size: 14px; color: #4a5568;">
          <p>Rotation: <strong>{rotation()} degrees</strong></p>
          <p>Scale: <strong>{scale().toFixed(2)}x</strong></p>
          <p>Position: <strong>({xPos().toFixed(0)}px, {yPos().toFixed(0)}px)</strong></p>
          <p>Color: <strong>{color()}</strong></p>
        </div>
      </div>
      
      <div class="test-status">
        [OK] CSS transitions + signal updates = smooth animations
      </div>
    </div>
  );
};

// ============================================================================
// TEST 8: DRAG & DROP - Interactive dragging
// ============================================================================

interface DraggableItem {
  id: number;
  x: number;
  y: number;
  color: string;
  label: string;
}

const DragDropTest = (): HTMLElement => {
  const [items, setItems] = createSignal<DraggableItem[]>([
    { id: 1, x: 50, y: 50, color: '#3182ce', label: 'Item 1' },
    { id: 2, x: 200, y: 100, color: '#38a169', label: 'Item 2' },
    { id: 3, x: 150, y: 200, color: '#e53e3e', label: 'Item 3' },
  ]);
  const [draggedItem, setDraggedItem] = createSignal<number | null>(null);
  const [dropCount, setDropCount] = createSignal(0);

  let dragOffset = { x: 0, y: 0 };

  const handleMouseDown = (id: number, e: MouseEvent) => {
    const item = items().find(i => i.id === id);
    if (item) {
      dragOffset = {
        x: e.clientX - item.x,
        y: e.clientY - item.y,
      };
      setDraggedItem(id);
    }
  };

  const handleMouseMove = (e: MouseEvent) => {
    const id = draggedItem();
    if (id !== null) {
      const container = e.currentTarget as HTMLElement;
      const rect = container.getBoundingClientRect();
      
      const newX = Math.max(0, Math.min(rect.width - 100, e.clientX - rect.left - dragOffset.x));
      const newY = Math.max(0, Math.min(rect.height - 100, e.clientY - rect.top - dragOffset.y));
      
      setItems(
        items().map(item =>
          item.id === id ? { ...item, x: newX, y: newY } : item
        )
      );
    }
  };

  const handleMouseUp = () => {
    if (draggedItem() !== null) {
      setDropCount(dropCount() + 1);
      setDraggedItem(null);
    }
  };

  const addNewItem = () => {
    const colors = ['#3182ce', '#38a169', '#e53e3e', '#dd6b20', '#805ad5', '#d69e2e'];
    const newItem: DraggableItem = {
      id: Date.now(),
      x: Math.random() * 300,
      y: Math.random() * 200,
      color: colors[Math.floor(Math.random() * colors.length)],
      label: `Item ${items().length + 1}`,
    };
    setItems([...items(), newItem]);
  };

  const resetPositions = () => {
    setItems(
      items().map((item, index) => ({
        ...item,
        x: 50 + (index % 3) * 150,
        y: 50 + Math.floor(index / 3) * 100,
      }))
    );
  };

  return (
    <div class="test-section">
      <h3>8. Drag & Drop Test</h3>
      
      <div class="test-group">
        <div class="controls" style="margin-bottom: 15px;">
          <button onClick={addNewItem}>Add Item</button>
          <button onClick={resetPositions}>Reset Positions</button>
          <span style="margin-left: 15px;">Drop Count: <strong>{dropCount()}</strong></span>
        </div>
        
        <div
          class="drag-container"
          onMouseMove={handleMouseMove}
          onMouseUp={handleMouseUp}
          onMouseLeave={handleMouseUp}
          style="position: relative; width: 100%; height: 400px; background: #f7fafc; border: 2px dashed #cbd5e0; border-radius: 8px; cursor: default; overflow: hidden; user-select: none;"
        >
          <ForRegistry each={items()}>
            {(item) => (
              <div
                key={item().id}
                onMouseDown={(e) => handleMouseDown(item().id, e)}
                class="draggable-item"
