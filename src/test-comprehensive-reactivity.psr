// ============================================================================
// TEST 6: CONTROL FLOW - Conditional rendering & lists
// ============================================================================

interface TodoItem {
  id: number;
  text: string;
  completed: boolean;
  priority: 'low' | 'medium' | 'high';
}

const ControlFlowTest = (): HTMLElement => {
  const [todos, setTodos] = createSignal<TodoItem[]>([
    { id: 1, text: 'Test ForRegistry loop', completed: false, priority: 'high' },
    { id: 2, text: 'Test ShowRegistry conditional', completed: false, priority: 'medium' },
    { id: 3, text: 'Test list reactivity', completed: true, priority: 'low' },
  ]);
  const [newTodoText, setNewTodoText] = createSignal('');
  const [showCompleted, setShowCompleted] = createSignal(true);
  const [filterPriority, setFilterPriority] = createSignal<'all' | 'low' | 'medium' | 'high'>('all');

  const visibleTodos = createMemo(() => {
    let filtered = todos();
    
    if (!showCompleted()) {
      filtered = filtered.filter(todo => !todo.completed);
    }
    
    if (filterPriority() !== 'all') {
      filtered = filtered.filter(todo => todo.priority === filterPriority());
    }
    
    return filtered;
  });

  const addTodo = () => {
    const text = newTodoText().trim();
    if (text) {
      const newTodo: TodoItem = {
        id: Date.now(),
        text,
        completed: false,
        priority: 'medium',
      };
      setTodos([...todos(), newTodo]);
      setNewTodoText('');
    }
  };

  const toggleTodo = (id: number) => {
    setTodos(
      todos().map(todo =>
        todo.id === id ? { ...todo, completed: !todo.completed } : todo
      )
    );
  };

  const deleteTodo = (id: number) => {
    setTodos(todos().filter(todo => todo.id !== id));
  };

  const changePriority = (id: number, priority: TodoItem['priority']) => {
    setTodos(
      todos().map(todo =>
        todo.id === id ? { ...todo, priority } : todo
      )
    );
  };

  const priorityColor = (priority: string) => {
    switch (priority) {
      case 'high': return '#e53e3e';
      case 'medium': return '#dd6b20';
      case 'low': return '#38a169';
      default: return '#718096';
    }
  };

  return (
    <div class="test-section">
      <h3>6. Control Flow Test (ForRegistry & ShowRegistry)</h3>
      
      <div class="test-group">
        <div class="todo-input">
          <input
            type="text"
            value={newTodoText()}
            onInput={(e) => setNewTodoText(e.target.value)}
            onKeyPress={(e) => e.key === 'Enter' && addTodo()}
            placeholder="Add new todo..."
            style="flex: 1; padding: 8px; border: 1px solid #cbd5e0; border-radius: 4px;"
          />
          <button onClick={addTodo} style="margin-left: 8px;">Add Todo</button>
        </div>
        
        <div class="filters" style="margin: 15px 0; display: flex; gap: 10px; align-items: center;">
          <label style="display: flex; align-items: center; gap: 5px;">
            <input
              type="checkbox"
              checked={showCompleted()}
              onChange={(e) => setShowCompleted(e.target.checked)}
            />
            Show Completed
          </label>
          
          <select
            value={filterPriority()}
            onChange={(e) => setFilterPriority(e.target.value as any)}
            style="padding: 4px 8px; border: 1px solid #cbd5e0; border-radius: 4px;"
          >
            <option value="all">All Priorities</option>
            <option value="high">High Priority</option>
            <option value="medium">Medium Priority</option>
            <option value="low">Low Priority</option>
          </select>
        </div>
        
        <div class="todo-stats">
          <p>Total: {todos().length} | Active: {todos().filter(t => !t.completed).length} | Completed: {todos().filter(t => t.completed).length}</p>
        </div>
        
        <div class="todo-list" style="margin-top: 15px;">
          <ShowRegistry when={visibleTodos().length > 0} fallback={
            <div style="padding: 20px; text-align: center; color: #718096; font-style: italic;">
              No todos to display
            </div>
          }>
            <ForRegistry each={visibleTodos()}>
              {(todo, index) => (
                <div
                  key={todo().id}
                  class="todo-item"
                  style={`display: flex; align-items: center; padding: 12px; margin: 8px 0; background: ${todo().completed ? '#f7fafc' : '#ffffff'}; border: 2px solid ${priorityColor(todo().priority)}; border-radius: 6px; transition: all 0.2s ease;`}
                >
                  <input
                    type="checkbox"
                    checked={todo().completed}
                    onChange={() => toggleTodo(todo().id)}
                    style="margin-right: 10px;"
                  />
                  
                  <span
                    style={`flex: 1; ${todo().completed ? 'text-decoration: line-through; opacity: 0.6;' : ''}`}
                  >
                    {index() + 1}. {todo().text}
                  </span>
                  
                  <select
                    value={todo().priority}
                    onChange={(e) => changePriority(todo().id, e.target.value as any)}
                    style="margin: 0 8px; padding: 4px; border: 1px solid #cbd5e0; border-radius: 3px; font-size: 12px;"
                  >
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                  </select>
                  
                  <button
                    onClick={() => deleteTodo(todo().id)}
                    style="padding: 4px 8px; background: #e53e3e; color: white; border: none; border-radius: 3px; cursor: pointer; font-size: 12px;"
                  >
                    Delete
                  </button>
                </div>
              )}
            </ForRegistry>
          </ShowRegistry>
        </div>
      </div>
      
      <div class="test-status">
        [OK] ForRegistry efficiently renders lists | ShowRegistry handles conditionals
      </div>
    </div>
  );
};

// ============================================================================
// TEST 7: ANIMATIONS - CSS transitions & transforms
// ============================================================================

const AnimationTest = (): HTMLElement => {
  const [isExpanded, setIsExpanded] = createSignal(false);
  const [rotation, setRotation] = createSignal(0);
  const [scale, setScale] = createSignal(1);
  const [xPos, setXPos] = createSignal(0);
  const [yPos, setYPos] = createSignal(0);
  const [color, setColor] = createSignal('#3182ce');

  const rotate = () => {
    setRotation(rotation() + 45);
  };

  const pulse = () => {
    setScale(1.5);
    setTimeout(() => setScale(1), 300);
  };

  const moveRandom = () => {
    setXPos(Math.random() * 200 - 100);
    setYPos(Math.random() * 200 - 100);
  };

  const randomColor = () => {
    const colors = ['#3182ce', '#38a169', '#e53e3e', '#dd6b20', '#805ad5', '#d69e2e'];
    setColor(colors[Math.floor(Math.random() * colors.length)]);
  };

  return (
    <div class="test-section">
      <h3>7. Animation & Transforms Test</h3>
      
      <div class="test-group">
        <div class="controls" style="display: flex; gap: 10px; flex-wrap: wrap; margin-bottom: 20px;">
          <button onClick={() => setIsExpanded(!isExpanded())}>
            {isExpanded() ? 'Collapse' : 'Expand'} Panel
          </button>
          <button onClick={rotate}>Rotate</button>
          <button onClick={pulse}>Pulse</button>
          <button onClick={moveRandom}>Move Random</button>
          <button onClick={randomColor}>Change Color</button>
          <button onClick={() => {
            setRotation(0);
            setScale(1);
            setXPos(0);
            setYPos(0);
            setColor('#3182ce');
          }}>
            Reset
          </button>
        </div>
        
        <div
          class="expandable-panel"
          style={`overflow: hidden; transition: max-height 0.5s ease, opacity 0.5s ease; max-height: ${isExpanded() ? '300px' : '0px'}; opacity: ${isExpanded() ? '1' : '0'}; background: #f7fafc; padding: ${isExpanded() ? '20px' : '0 20px'}; border-radius: 8px; margin-bottom: 20px;`}
        >
          <h4>Expandable Content</h4>
          <p>This panel smoothly expands and collapses using CSS transitions.</p>
          <p>Height transition demonstrates smooth animation driven by signal state.</p>
        </div>
        
        <div
          class="animation-playground"
          style="position: relative; height: 400px; background: #f7fafc; border-radius: 8px; display: flex; align-items: center; justify-content: center; overflow: hidden;"
        >
          <div
            class="animated-box"
            style={`width: 120px; height: 120px; background: ${color()}; border-radius: 12px; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; transition: transform 0.5s ease, background 0.3s ease, box-shadow 0.3s ease; transform: translate(${xPos()}px, ${yPos()}px) rotate(${rotation()}deg) scale(${scale()}); box-shadow: 0 10px 30px rgba(0,0,0,0.2);`}
          >
            PULSAR
