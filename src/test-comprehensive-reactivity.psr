        [OK] Drag & drop with real-time position updates via signals
      </div>
    </div>
  );
};

// ============================================================================
// TEST 9: LIST REORDERING - Dynamic list manipulation
// ============================================================================

interface ReorderableItem {
  id: number;
  text: string;
  color: string;
}

const ListReorderingTest = (): HTMLElement => {
  const [items, setItems] = createSignal<ReorderableItem[]>([
    { id: 1, text: 'First Item', color: '#3182ce' },
    { id: 2, text: 'Second Item', color: '#38a169' },
    { id: 3, text: 'Third Item', color: '#e53e3e' },
    { id: 4, text: 'Fourth Item', color: '#dd6b20' },
    { id: 5, text: 'Fifth Item', color: '#805ad5' },
  ]);
  const [reorderCount, setReorderCount] = createSignal(0);

  const moveUp = (index: number) => {
    if (index > 0) {
      const newItems = [...items()];
      [newItems[index - 1], newItems[index]] = [newItems[index], newItems[index - 1]];
      setItems(newItems);
      setReorderCount(reorderCount() + 1);
    }
  };

  const moveDown = (index: number) => {
    if (index < items().length - 1) {
      const newItems = [...items()];
      [newItems[index], newItems[index + 1]] = [newItems[index + 1], newItems[index]];
      setItems(newItems);
      setReorderCount(reorderCount() + 1);
    }
  };

  const moveToTop = (index: number) => {
    if (index > 0) {
      const newItems = [...items()];
      const [item] = newItems.splice(index, 1);
      newItems.unshift(item);
      setItems(newItems);
      setReorderCount(reorderCount() + 1);
    }
  };

  const moveToBottom = (index: number) => {
    if (index < items().length - 1) {
      const newItems = [...items()];
      const [item] = newItems.splice(index, 1);
      newItems.push(item);
      setItems(newItems);
      setReorderCount(reorderCount() + 1);
    }
  };

  const shuffle = () => {
    const newItems = [...items()];
    for (let i = newItems.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [newItems[i], newItems[j]] = [newItems[j], newItems[i]];
    }
    setItems(newItems);
    setReorderCount(reorderCount() + 1);
  };

  const reverse = () => {
    setItems([...items()].reverse());
    setReorderCount(reorderCount() + 1);
  };

  const addItem = () => {
    const colors = ['#3182ce', '#38a169', '#e53e3e', '#dd6b20', '#805ad5', '#d69e2e'];
    const newItem: ReorderableItem = {
      id: Date.now(),
      text: `New Item ${items().length + 1}`,
      color: colors[Math.floor(Math.random() * colors.length)],
    };
    setItems([...items(), newItem]);
  };

  const removeItem = (id: number) => {
    setItems(items().filter(item => item.id !== id));
  };

  return (
    <div class="test-section">
      <h3>9. List Reordering Test</h3>
      
      <div class="test-group">
        <div class="controls" style="margin-bottom: 15px; display: flex; gap: 8px; flex-wrap: wrap;">
          <button onClick={shuffle}>Shuffle</button>
          <button onClick={reverse}>Reverse</button>
          <button onClick={addItem}>Add Item</button>
          <span style="margin-left: 10px;">Reorder Count: <strong>{reorderCount()}</strong></span>
        </div>
        
        <div class="reorderable-list">
          <ForRegistry each={items()}>
            {(item, index) => (
              <div
                key={item().id}
                class="reorderable-item"
                style={`display: flex; align-items: center; gap: 10px; padding: 12px; margin: 8px 0; background: white; border-left: 4px solid ${item().color}; border-radius: 6px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); transition: all 0.3s ease;`}
              >
                <div class="item-number" style={`min-width: 30px; height: 30px; background: ${item().color}; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;`}>
                  {index() + 1}
                </div>
                
                <div style="flex: 1;">
                  <strong>{item().text}</strong>
                  <div style="font-size: 12px; color: #718096;">ID: {item().id}</div>
                </div>
                
                <div class="reorder-buttons" style="display: flex; gap: 4px;">
                  <button
                    onClick={() => moveToTop(index())}
                    disabled={index() === 0}
                    title="Move to top"
                    style="padding: 4px 8px; font-size: 12px; border: 1px solid #cbd5e0; background: white; border-radius: 3px; cursor: pointer;"
                  >
                    ^^
                  </button>
                  <button
                    onClick={() => moveUp(index())}
                    disabled={index() === 0}
                    title="Move up"
                    style="padding: 4px 8px; font-size: 12px; border: 1px solid #cbd5e0; background: white; border-radius: 3px; cursor: pointer;"
                  >
                    ^
                  </button>
                  <button
                    onClick={() => moveDown(index())}
                    disabled={index() === items().length - 1}
                    title="Move down"
                    style="padding: 4px 8px; font-size: 12px; border: 1px solid #cbd5e0; background: white; border-radius: 3px; cursor: pointer;"
                  >
                    v
                  </button>
                  <button
                    onClick={() => moveToBottom(index())}
                    disabled={index() === items().length - 1}
                    title="Move to bottom"
                    style="padding: 4px 8px; font-size: 12px; border: 1px solid #cbd5e0; background: white; border-radius: 3px; cursor: pointer;"
                  >
                    vv
                  </button>
                  <button
                    onClick={() => removeItem(item().id)}
                    title="Remove"
                    style="padding: 4px 8px; font-size: 12px; background: #e53e3e; color: white; border: none; border-radius: 3px; cursor: pointer; margin-left: 4px;"
                  >
                    X
                  </button>
                </div>
              </div>
            )}
          </ForRegistry>
        </div>
      </div>
      
      <div class="test-status">
        [OK] List reordering with smooth transitions and maintained state
      </div>
    </div>
  );
};

// ============================================================================
// TEST 10: RESIZABLE BORDERS - Interactive resize
// ============================================================================

const ResizableTest = (): HTMLElement => {
  const [leftWidth, setLeftWidth] = createSignal(50);
  const [topHeight, setTopHeight] = createSignal(50);
  const [isResizingH, setIsResizingH] = createSignal(false);
  const [isResizingV, setIsResizingV] = createSignal(false);
  const [resizeCount, setResizeCount] = createSignal(0);

  const startResizeH = () => {
    setIsResizingH(true);
  };

  const startResizeV = () => {
    setIsResizingV(true);
  };

  const handleMouseMove = (e: MouseEvent) => {
    if (isResizingH() || isResizingV()) {
      const container = (e.currentTarget as HTMLElement);
      const rect = container.getBoundingClientRect();
      
      if (isResizingH()) {
        const percent = ((e.clientX - rect.left) / rect.width) * 100;
        setLeftWidth(Math.max(10, Math.min(90, percent)));
      }
      
      if (isResizingV()) {
        const percent = ((e.clientY - rect.top) / rect.height) * 100;
        setTopHeight(Math.max(10, Math.min(90, percent)));
      }
    }
  };

  const stopResize = () => {
    if (isResizingH() || isResizingV()) {
      setResizeCount(resizeCount() + 1);
    }
    setIsResizingH(false);
    setIsResizingV(false);
  };

  return (
    <div class="test-section">
      <h3>10. Resizable Borders Test</h3>
      
      <div class="test-group">
        <div class="resize-stats" style="margin-bottom: 15px;">
          <p>Horizontal Split: <strong>{leftWidth().toFixed(1)}%</strong> / <strong>{(100 - leftWidth()).toFixed(1)}%</strong></p>
          <p>Vertical Split: <strong>{topHeight().toFixed(1)}%</strong> / <strong>{(100 - topHeight()).toFixed(1)}%</strong></p>
          <p>Resize Actions: <strong>{resizeCount()}</strong></p>
        </div>
        
        <div
          class="resizable-container"
          onMouseMove={handleMouseMove}
          onMouseUp={stopResize}
          onMouseLeave={stopResize}
          style="width: 100%; height: 400px; background: #f7fafc; border-radius: 8px; overflow: hidden; position: relative; user-select: none;"
        >
          {/* Horizontal Split */}
          <div style="display: flex; height: 100%;">
            <div
              class="left-panel"
              style={`width: ${leftWidth()}%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; display: flex; align-items: center; justify-content: center; padding: 20px; position: relative;`}
            >
              <div style="text-align: center;">
                <h4>Left Panel</h4>
                <p>Width: {leftWidth().toFixed(1)}%</p>
                <p style="font-size: 14px; opacity: 0.9; margin-top: 10px;">
                  Drag the vertical divider to resize ->
                </p>
              </div>
            </div>
            
            <div
              class="divider-vertical"
              onMouseDown={startResizeH}
              style={`width: 8px; cursor: col-resize; background: ${isResizingH() ? '#3182ce' : '#cbd5e0'}; transition: background 0.2s ease; position: relative; z-index: 10;`}
            >
              <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 4px; height: 40px; background: white; border-radius: 2px; opacity: 0.7;" />
            </div>
            
            <div
              class="right-panel"
              style={`flex: 1; background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; display: flex; flex-direction: column; overflow: hidden;`}
            >
              <div style={`height: ${topHeight()}%; display: flex; align-items: center; justify-content: center; padding: 20px; position: relative;`}>
                <div style="text-align: center;">
                  <h4>Top Panel</h4>
                  <p>Height: {topHeight().toFixed(1)}%</p>
                  <p style="font-size: 14px; opacity: 0.9; margin-top: 10px;">
                    Drag the horizontal divider to resize v
                  </p>
                </div>
              </div>
              
              <div
                class="divider-horizontal"
                onMouseDown={startResizeV}
                style={`height: 8px; cursor: row-resize; background: ${isResizingV() ? '#3182ce' : '#cbd5e0'}; transition: background 0.2s ease; position: relative; z-index: 10;`}
              >
                <div style="position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%); height: 4px; width: 40px; background: white; border-radius: 2px; opacity: 0.7;" />
              </div>
              
              <div style="flex: 1; display: flex; align-items: center; justify-content: center; padding: 20px;">
                <div style="text-align: center;">
                  <h4>Bottom Panel</h4>
                  <p>Height: {(100 - topHeight()).toFixed(1)}%</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="test-status">
        [OK] Resizable borders with real-time signal-based dimension updates
      </div>
    </div>
  );
};

// ============================================================================
// TEST 11: LIVE TEXT MIRRORING - Input -> Display reactivity
// ============================================================================

const TextMirroringTest = (): HTMLElement => {
  const [sourceText, setSourceText] = createSignal('');
  const [updateCount, setUpdateCount] = createSignal(0);
  
  // Derived transforms
  const upperCase = createMemo(() => sourceText().toUpperCase());
  const lowerCase = createMemo(() => sourceText().toLowerCase());
  const reversed = createMemo(() => sourceText().split('').reverse().join(''));
  const wordCount = createMemo(() => sourceText().trim().split(/\s+/).filter(w => w).length);
  const charCount = createMemo(() => sourceText().length);
  
  // Track updates
  createEffect(() => {
    if (sourceText()) {
      setUpdateCount(updateCount() + 1);
    }
  });

  return (
    <div class="test-section">
      <h3>11. Live Text Mirroring Test</h3>
      
      <div class="test-group">
        <p>Type text and see it reflected instantly across multiple displays with different transformations.</p>
        
        <div class="input-section" style="margin: 15px 0;">
          <label style="display: block; margin-bottom: 8px; font-weight: 600;">
            Source Input:
          </label>
          <textarea
            value={sourceText()}
            onInput={(e) => setSourceText(e.target.value)}
            placeholder="Type something here..."
            style="width: 100%; min-height: 100px; padding: 12px; border: 2px solid #cbd5e0; border-radius: 6px; font-family: monospace; font-size: 14px; resize: vertical;"
          />
        </div>
        
        <div class="stats" style="margin: 15px 0; padding: 10px; background: #f7fafc; border-radius: 6px;">
          <p>Characters: <strong>{charCount()}</strong> | Words: <strong>{wordCount()}</strong> | Updates: <strong>{updateCount()}</strong></p>
        </div>
        
        <div class="mirrors" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 15px; margin-top: 15px;">
          <div class="mirror-box" style="padding: 15px; background: white; border: 2px solid #3182ce; border-radius: 8px;">
            <h4 style="margin-top: 0; color: #3182ce;">Original</h4>
            <div style="padding: 10px; background: #ebf8ff; border-radius: 4px; min-height: 60px; font-family: monospace; white-space: pre-wrap; word-break: break-all;">
              {sourceText() || '(empty)'}
            </div>
          </div>
          
          <div class="mirror-box" style="padding: 15px; background: white; border: 2px solid #38a169; border-radius: 8px;">
            <h4 style="margin-top: 0; color: #38a169;">UPPERCASE</h4>
            <div style="padding: 10px; background: #f0fff4; border-radius: 4px; min-height: 60px; font-family: monospace; white-space: pre-wrap; word-break: break-all;">
              {upperCase() || '(empty)'}
            </div>
          </div>
          
          <div class="mirror-box" style="padding: 15px; background: white; border: 2px solid #e53e3e; border-radius: 8px;">
            <h4 style="margin-top: 0; color: #e53e3e;">lowercase</h4>
            <div style="padding: 10px; background: #fff5f5; border-radius: 4px; min-height: 60px; font-family: monospace; white-space: pre-wrap; word-break: break-all;">
              {lowerCase() || '(empty)'}
            </div>
          </div>
          
          <div class="mirror-box" style="padding: 15px; background: white; border: 2px solid #805ad5; border-radius: 8px;">
            <h4 style="margin-top: 0; color: #805ad5;">Reversed</h4>
            <div style="padding: 10px; background: #faf5ff; border-radius: 4px; min-height: 60px; font-family: monospace; white-space: pre-wrap; word-break: break-all; direction: rtl;">
              {reversed() || '(empty)'}
            </div>
          </div>
        </div>
      </div>
      
      <div class="test-status">
        [OK] Text mirroring demonstrates instant signal propagation to multiple displays
      </div>
    </div>
  );
};

