/**
 * COMPREHENSIVE PULSAR REACTIVITY TEST SUITE
 * Tests all core reactivity features of the Pulsar framework
 * 
 * Features tested:
 * 1. Signals - Basic reactive state
 * 2. Effects - Side effects from signal changes
 * 3. Memos - Computed/derived values
 * 4. Context API - Component tree state sharing
 * 5. Portals - Rendering outside parent hierarchy
 * 6. Control Flow - Conditional rendering & lists
 * 7. Animations - CSS transitions & transforms
 * 8. Drag & Drop - Interactive dragging
 * 9. List Reordering - Dynamic list manipulation
 * 10. Resizable Borders - Interactive resize
 * 11. Live Text Mirroring - Input -> Display reactivity
 * 12. Resource Loading - Async data handling
 * 13. Error Boundaries - Error handling
 */

import {
  createSignal,
  createEffect,
  createMemo,
  createContext,
  useContext,
  Portal,
  PortalSlot,
  ForRegistry,
  ShowRegistry,
  Tryer,
  Catcher,
  createResource,
  bootstrapApp,
} from '@pulsar-framework/pulsar.dev';

// ============================================================================
// TEST 1: BASIC SIGNALS - Core reactive state management
// ============================================================================

const SignalTest = (): HTMLElement => {
  const [count, setCount] = createSignal(0);
  const [name, setName] = createSignal('Pulsar');
  const [isActive, setIsActive] = createSignal(false);

  return (
    <div class="test-section">
      <h3>1. Signal Reactivity Test</h3>
      
      <div class="test-group">
        <div class="signal-display">
          <p>Count: <strong>{count()}</strong></p>
          <p>Name: <strong>{name()}</strong></p>
          <p>Status: <strong>{isActive() ? '[OK] Active' : '[X] Inactive'}</strong></p>
        </div>
        
        <div class="controls">
          <button onClick={() => setCount(count() + 1)}>Increment Count</button>
          <button onClick={() => setCount(count() - 1)}>Decrement Count</button>
          <button onClick={() => setCount(0)}>Reset Count</button>
          
          <input
            type="text"
            value={name()}
            onInput={(e) => setName(e.target.value)}
            placeholder="Enter name"
          />
          
          <button onClick={() => setIsActive(!isActive())}>
            Toggle Status
          </button>
        </div>
      </div>
      
      <div class="test-status">
        [OK] Signals update UI immediately on change
      </div>
    </div>
  );
};

// ============================================================================
// TEST 2: EFFECTS - Side effects from signal changes
// ============================================================================

const EffectTest = (): HTMLElement => {
  const [input, setInput] = createSignal('');
  const [effectLog, setEffectLog] = createSignal<string[]>([]);
  const [effectCount, setEffectCount] = createSignal(0);

  // Effect runs automatically when dependencies change
  createEffect(() => {
    const currentInput = input();
    if (currentInput) {
      const timestamp = new Date().toLocaleTimeString();
      const log = `[${timestamp}] Input changed to: "${currentInput}"`;
      setEffectLog([...effectLog(), log]);
      setEffectCount(effectCount() + 1);
    }
  });

  return (
    <div class="test-section">
      <h3>2. Effect Reactivity Test</h3>
      
      <div class="test-group">
        <div class="input-section">
          <label>Type something (triggers effect):</label>
          <input
            type="text"
            value={input()}
            onInput={(e) => setInput(e.target.value)}
            placeholder="Type here..."
            class="effect-input"
          />
        </div>
        
        <div class="effect-stats">
          <p>Effect triggered: <strong>{effectCount()}</strong> times</p>
        </div>
        
        <div class="effect-log">
          <h4>Effect Log:</h4>
          <div class="log-entries">
            {effectLog().length > 0 ? (
              <ForRegistry each={effectLog()}>
                {(entry, index) => (
                  <div class="log-entry" key={index()}>
                    {entry()}
                  </div>
                )}
              </ForRegistry>
            ) : (
              <div class="log-placeholder">No effects triggered yet...</div>
            )}
          </div>
        </div>
        
        <button onClick={() => {
          setInput('');
          setEffectLog([]);
          setEffectCount(0);
        }}>
          Clear Log
        </button>
      </div>
      
      <div class="test-status">
        [OK] Effects run automatically when tracked signals change
      </div>
    </div>
  );
};

// ============================================================================
// TEST 3: MEMOS - Computed/derived values
// ============================================================================

const MemoTest = (): HTMLElement => {
  const [firstName, setFirstName] = createSignal('John');
  const [lastName, setLastName] = createSignal('Doe');
  const [items, setItems] = createSignal([10, 20, 30, 40, 50]);

  // Memos are cached computed values - only recompute when dependencies change
  const fullName = createMemo(() => `${firstName()} ${lastName()}`);
  const initials = createMemo(() => `${firstName()[0]}${lastName()[0]}`);
  const itemsSum = createMemo(() => items().reduce((sum, n) => sum + n, 0));
  const itemsAverage = createMemo(() => {
    const sum = itemsSum();
    return items().length > 0 ? (sum / items().length).toFixed(2) : 0;
  });

  return (
    <div class="test-section">
      <h3>3. Memo (Computed Values) Test</h3>
      
      <div class="test-group">
        <div class="input-section">
          <label>First Name:</label>
          <input
            type="text"
            value={firstName()}
            onInput={(e) => setFirstName(e.target.value)}
          />
          
          <label>Last Name:</label>
          <input
            type="text"
            value={lastName()}
            onInput={(e) => setLastName(e.target.value)}
          />
        </div>
        
        <div class="computed-results">
          <h4>Computed Values (Memos):</h4>
          <p>Full Name: <strong>{fullName()}</strong></p>
          <p>Initials: <strong>{initials()}</strong></p>
        </div>
        
        <div class="numbers-section">
          <h4>Numbers: {items().join(', ')}</h4>
          <p>Sum: <strong>{itemsSum()}</strong></p>
          <p>Average: <strong>{itemsAverage()}</strong></p>
          
          <button onClick={() => setItems([...items(), Math.floor(Math.random() * 100)])}>
            Add Random Number
          </button>
          <button onClick={() => setItems([])}>Clear Numbers</button>
        </div>
      </div>
      
      <div class="test-status">
        [OK] Memos cache computed values and only recompute when dependencies change
      </div>
    </div>
  );
};

// ============================================================================
// TEST 4: CONTEXT API - Component tree state sharing
// ============================================================================

interface ThemeContext {
  theme: () => string;
  setTheme: (theme: string) => void;
  fontSize: () => number;
  setFontSize: (size: number) => void;
}

const ThemeContext = createContext<ThemeContext>();

const ThemedComponent = (): HTMLElement => {
  const context = useContext(ThemeContext);
  
  if (!context) {
    return <div>Error: No theme context provided</div>;
  }

  const { theme, fontSize } = context;
  
  const backgroundColor = theme() === 'dark' ? '#1a202c' : '#ffffff';
  const textColor = theme() === 'dark' ? '#e2e8f0' : '#1a202c';

  return (
    <div
      class="themed-content"
      style={`background-color: ${backgroundColor}; color: ${textColor}; padding: 20px; border-radius: 8px; font-size: ${fontSize()}px; transition: all 0.3s ease;`}
    >
      <p>This component uses context values:</p>
      <ul>
        <li>Theme: <strong>{theme()}</strong></li>
        <li>Font Size: <strong>{fontSize()}px</strong></li>
      </ul>
      <p>Context allows sharing state across component tree without prop drilling.</p>
    </div>
  );
};

const ContextTest = (): HTMLElement => {
  const [theme, setTheme] = createSignal('light');
  const [fontSize, setFontSize] = createSignal(16);

  const contextValue: ThemeContext = {
    theme,
    setTheme,
    fontSize,
    setFontSize,
  };

  return (
    <ThemeContext.Provider value={contextValue}>
      <div class="test-section">
        <h3>4. Context API Test</h3>
        
        <div class="test-group">
          <div class="controls">
            <button onClick={() => setTheme(theme() === 'light' ? 'dark' : 'light')}>
              Toggle Theme ({theme()})
            </button>
            
            <div class="font-size-control">
              <label>Font Size: {fontSize()}px</label>
              <input
                type="range"
                min="12"
                max="24"
                value={fontSize()}
                onInput={(e) => setFontSize(parseInt(e.target.value))}
              />
            </div>
          </div>
          
          <ThemedComponent />
        </div>
        
        <div class="test-status">
          [OK] Context provides values to descendant components without prop drilling
        </div>
      </div>
    </ThemeContext.Provider>
  );
};

