import { createMemo, createSignal, useState } from '@pulsar-framework/pulsar.dev';

component Counter() {
  const [hookCount, setHookCount] = useState(0);
  const [hookStep, setHookStep] = useState(1);

  const [signalCount, setSignalCount] = createSignal(0);
  const [signalStep, setSignalStep] = createSignal(1);
  const signalDouble = createMemo(() => signalCount() * 2);

  const updateHookStep = (next) => {
    setHookStep(Math.max(1, next));
  };

  const updateSignalStep = (next) => {
    setSignalStep(Math.max(1, next));
  };


  return (
    <div style="padding: 2rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 12px; margin: 1rem;">
      <h2 style="color: white; margin-bottom: 1rem;">Test: Reactivity (Hooks + Signals)</h2>

      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.5rem;">
        <div style="background: rgba(255,255,255,0.12); padding: 1.5rem; border-radius: 8px;">
          <h3 style="color: white; margin: 0 0 1rem 0;">Hooks Approach</h3>
          <p style="color: white; margin: 0 0 0.5rem 0; font-size: 1.2rem;">Count: {hookCount()}</p>
          <p style="color: rgba(255,255,255,0.85); margin: 0 0 1rem 0;">Double: {hookCount() * 2}</p>

          <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; margin-bottom: 1rem;">
            <button
              onClick={() => setHookCount((prev) => prev + hookStep())}
              style="background: #4CAF50; color: white; padding: 0.6rem 1rem; border: none; border-radius: 6px; cursor: pointer; font-size: 0.95rem;"
            >
              +{hookStep()}
            </button>
            <button
              onClick={() => setHookCount((prev) => prev - hookStep())}
              style="background: #f44336; color: white; padding: 0.6rem 1rem; border: none; border-radius: 6px; cursor: pointer; font-size: 0.95rem;"
            >
              -{hookStep()}
            </button>
            <button
              onClick={() => setHookCount(0)}
              style="background: #FF9800; color: white; padding: 0.6rem 1rem; border: none; border-radius: 6px; cursor: pointer; font-size: 0.95rem;"
            >
              Reset
            </button>
          </div>

          <div style="background: rgba(255,255,255,0.12); padding: 0.75rem; border-radius: 6px;">
            <p style="color: white; margin: 0 0 0.5rem 0;">Step: {hookStep()}</p>
            <div style="display: flex; gap: 0.5rem;">
              <button
                onClick={() => updateHookStep(hookStep() + 1)}
                style="background: rgba(255,255,255,0.25); color: white; padding: 0.35rem 0.75rem; border: none; border-radius: 6px; cursor: pointer;"
              >
                +
              </button>
              <button
                onClick={() => updateHookStep(hookStep() - 1)}
                style="background: rgba(255,255,255,0.25); color: white; padding: 0.35rem 0.75rem; border: none; border-radius: 6px; cursor: pointer;"
              >
                -
              </button>
            </div>
          </div>
        </div>

        <div style="background: rgba(255,255,255,0.12); padding: 1.5rem; border-radius: 8px;">
          <h3 style="color: white; margin: 0 0 1rem 0;">Signal Syntax Approach</h3>
          <p style="color: white; margin: 0 0 0.5rem 0; font-size: 1.2rem;">Count: {signalCount()}</p>
          <p style="color: rgba(255,255,255,0.85); margin: 0 0 1rem 0;">Memo Double: {signalDouble()}</p>

          <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; margin-bottom: 1rem;">
            <button
              onClick={() => setSignalCount((prev) => prev + signalStep())}
              style="background: #4CAF50; color: white; padding: 0.6rem 1rem; border: none; border-radius: 6px; cursor: pointer; font-size: 0.95rem;"
            >
              +{signalStep()}
            </button>
            <button
              onClick={() => setSignalCount((prev) => prev - signalStep())}
              style="background: #f44336; color: white; padding: 0.6rem 1rem; border: none; border-radius: 6px; cursor: pointer; font-size: 0.95rem;"
            >
              -{signalStep()}
            </button>
            <button
              onClick={() => setSignalCount(0)}
              style="background: #FF9800; color: white; padding: 0.6rem 1rem; border: none; border-radius: 6px; cursor: pointer; font-size: 0.95rem;"
            >
              Reset
            </button>
          </div>

          <div style="background: rgba(255,255,255,0.12); padding: 0.75rem; border-radius: 6px;">
            <p style="color: white; margin: 0 0 0.5rem 0;">Step: {signalStep()}</p>
            <div style="display: flex; gap: 0.5rem;">
              <button
                onClick={() => updateSignalStep(signalStep() + 1)}
                style="background: rgba(255,255,255,0.25); color: white; padding: 0.35rem 0.75rem; border: none; border-radius: 6px; cursor: pointer;"
              >
                +
              </button>
              <button
                onClick={() => updateSignalStep(signalStep() - 1)}
                style="background: rgba(255,255,255,0.25); color: white; padding: 0.35rem 0.75rem; border: none; border-radius: 6px; cursor: pointer;"
              >
                -
              </button>
            </div>
          </div>
        </div>
      </div>

      <div style="margin-top: 1.5rem; background: rgba(255,255,255,0.1); padding: 1rem; border-radius: 8px;">
        <p style="color: white; margin: 0 0 0.25rem 0;">Combined Total: {hookCount() + signalCount()}</p>
        <p style="color: white; margin: 0 0 0.25rem 0;">Hooks Even: {hookCount() % 2 === 0 ? 'Yes' : 'No'}</p>
        <p style="color: white; margin: 0;">Signal Even: {signalCount() % 2 === 0 ? 'Yes' : 'No'}</p>
      </div>
    </div>
  );
}

export { Counter }


