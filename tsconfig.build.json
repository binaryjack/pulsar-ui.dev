{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../pulsar/pulsar.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "src/**/stories/**"
  ]
}
